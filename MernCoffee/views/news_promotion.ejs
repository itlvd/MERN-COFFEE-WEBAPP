<%- include("_layouts/header.ejs") %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <script type='text/javascript'
        src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js'></script>
    <style>
        body {
            background-color: #1e1c2a;
            margin-top: 60px;
            justify-content: center;
        }

        .card {
            background-color: #252836;
            color: #fff;
            border-radius: 12px;
            margin-left: auto;
            margin-right: auto;
            width: 100%;
            border: 5px;
            padding: 10px;
            align-content: auto;

        }

        .user-timing {
            right: 9px;
            bottom: 9px;
            color: #fff
        }

        .views-content {
            color: #606271
        }

        .views {
            font-size: 12px
        }

        .dots {
            display: flex;
            height: 10px;
            width: 10px;
            background-color: green;
            border-radius: 50%;
            margin-left: 5px;
            margin-bottom: 6px
        }

        .days-ago {
            margin-top: -10px;
            color: #606271
        }

        .snipimage img {
            height: 200px
        }

        .card-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 16px 32px;
        }

        .promo-code {
            font-style: italic;
        }

        .copy-btn{
            margin: 0px 16px;
            font-size: 16px;
            cursor: pointer;
        }

        .msg{
            display: none;
            opacity: 0.5;
        }

        .show{
            display: block !important;
        }
    </style>

    <div class="card-container">
        <%promotions.forEach(function(promo){%>
            <div class="card p-3">

                <div class="row">
                    <div class="col-md-4">
                        <div class="position-relative snipimage"> <img src=<%=promo.image%> class="rounded img-fluid
                            w-100 img-responsive">
                        </div>
                    </div>
                    <div class="col-md-8 d-flex flex-column justify-content-between">
                        <div class="mt-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-1">
                                    <%=promo.title%>
                                </h5> <span>
                                </span>
                            </div>

                            <div class="d-flex flex-row mt-3"> <img src="/img/admin.jpg" width="50" height="50"
                                    class="rounded-circle">
                                <div class="ms-2 d-flex flex-column">
                                    <div class="d-flex flex-row align-items-center">
                                        <h6>Admin</h6> <span class="dots"></span>
                                    </div> <span class="days-ago">
                                        <%=promo.expiryDate%>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h5 class="mb-1">Value discount: <span class="promo-code">
                                    <%=promo.value%> VND
                                </span></h5>
                        </div>
                        <div class="d-flex">
                            <h5 class="mb-1">Discount code: <span class="promo-code">
                                    <%=promo.code%>
                                </span></h5>
                            <div class="copy-btn" onclick="copyToClipboard(this)"><i class="fas fa-copy"></i></div>
                            <h5 class="msg">Copied</h5>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>


    </div>

    <script>
        function copyToClipboard(e){
            var parent = e.parentElement;
            var promoCode = parent.querySelector(".promo-code").innerHTML;
            navigator.clipboard.writeText(promoCode);
            var msg = parent.querySelector(".msg");
            msg.classList.toggle("show");
        }
    </script>

    <%- include("_layouts/footer.ejs") %>