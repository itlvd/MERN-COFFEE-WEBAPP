<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>
        <%= title%>
    </title>
    <!--header's css-->

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />

</head>

<body>

    <div id="main">
        <div id="header">
            <div id="navbar">
                <a href="/">Home</a>
                <a href="">News</a>
                <a href="/products">Products</a>
                <a href="/about">About us</a>
            </div>
            <% if (user) { %>
                <div id="profile-dropdown">
                    <i class="fas fa-user-circle"></i>
                    <<<<<<< HEAD </div>
                </div>


                <div class="modal">
                    <div class="animate modal-container">
                        <div class="modal-close">
                            <i class="fas fa-times"></i>
                        </div>
                        <% if (user) { %>
                            <li><a href="/users/logout">Hi, <%= user.username %> ( logout )</a></li>
                            <% } else {%>
                                <div class="modal-body">

                                    <form action="/users/login" method="post">
                                        <label for="username-input" class="modal-label">
                                            <i class="fas fa-user"></i>
                                            Username
                                        </label>
                                        <input type="text" id="username-input" class="form-control"
                                            placeholder="Enter Username" name="username" required>

                                        <label for="password-input" class="modal-label">
                                            <i class="fas fa-lock"></i>
                                            Password
                                        </label>
                                        <input type="password" id="password-input" class="form-control"
                                            placeholder="Enter Password" name="password" required>

                                        <input type="submit" value="Login" class="submit-btn"></input>

                                    </form>

                                </div>
                                <div class="modal-footer">
                                    <a href="http://www.google.com/">
                                        <button type="button" class="register">Register</button>
                                    </a>
                                    <span class="psw subtitle">Forgot <a href="#">password?</a></span>
                                </div>
                                <% } %>
                                    <% if (user && user.role !="user" ) { %>
                                        <li><a href="/admin/pages">Admin Area</a></li>
                                        <% }%>

                                            <div class="profile-menu">
                                                <div class="welcome">Hi, <%= user.username %>
                                                </div>
                                                <a href="" class="view-profile">
                                                    <i class="fa fa-user"></i>
                                                    Profile
                                                </a>
                                                <% if (user && user.role !="user" ) { %>
                                                    <a href="/admin/pages">
                                                        <i class="fa fa-lock"></i>
                                                        Admin Area
                                                    </a>
                                                    <% }%>
                                                        <a href="/users/logout">
                                                            <i class="fa fa-power-off"></i>
                                                            Logout
                                                        </a>
                                            </div>

                    </div>


                    <% } else {%>
                        <div id="profile">
                            <a href="/users/login" class="profile-a"></a>
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <% } %>


                </div>

                <script>

                    var profileBtn = document.querySelector("#profile-dropdown");
                    var dropdownMenu = document.querySelector(".profile-menu");
                    profileBtn.addEventListener('click', () => {
                        dropdownMenu.classList.toggle("show-flex");

                    })
                    window.onclick = (e) => {
                        if (e.target.matches('.profile-menu')) {
                            if (dropdownMenu.classList.contains('show-flex')) {
                                dropdownMenu.classList.remove('show-flex')
                            }
                        }
                    }
                </script>