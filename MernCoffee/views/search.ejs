<%- include('./_layouts/header') %>

    <h2 class="page-title">Result</h2>

    <% if (count> 0) { %>
        <table class="table table-striped alignmiddle">
            <thead>
                <tr class="home">
                    <th>Serial</th>
                    <th>Title</th>
                    <th>Category ID</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <div class="row products">
    
                    <% categories.forEach(function(c){ %>
                            <div class="col-xs-12 col-md-4 p">
                                <a class="pa" href="/products/<%= c.title %>">
                                    <h3><%= c.title %></h3>
                                </a>
                                <a class="vd" href="/products/<%= c.title %>">View Details</a>
                            </div>
                    <% }); %>
                    
                </div> 

                    <div class="row products">
    
                        <% products.forEach(function(p){ %>
                                <div class="col-xs-12 col-md-4 p">
                                    <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                                        <h3><%= p.title %></h3>
                                    </a>
                                    <a class="vd" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>
                                </div>
                        <% }); %>
                        
                    </div> 
            </tbody>
        </table>
        <% } else {%>
            <h3 class="text-center">There are no results.</h3>
            <% }%>


            <%= user %>
            <%- include('./_layouts/footer') %>