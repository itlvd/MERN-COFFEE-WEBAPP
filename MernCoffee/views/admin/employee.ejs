<%- include('../_layouts/adminheader_test') %>

    <h2 class="page-title d-flex flex-column align-items-center" style="margin-top: 20px; margin-left: 50px;">
        Employee
        Management Area
    </h2>
    <hr class="hline" style="margin-left: 410px; width: 100%; margin-bottom: 20px;">
    <a href="/admin/employee/add-employee" class="btn3 btn-primary btn-lg" style="margin-left: 450px;">Add a new
        employee</a>
    <br><br>

    <% if (count> 0) { %>
        <table class="table table-striped alignmiddle" style="margin-left: 450px;">
            <thead>
                <tr class="home">
                    <th>Serial</th>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% employees.forEach(function(employee){ %>
                    <tr>
                        <td>
                            <%= employee_count++ %>
                        </td>
                        <td>
                            <%= employee.name %>
                        </td>
                        <td>
                            <%= employee.username %>
                        </td>
                        <td>
                            <%= employee.role %>
                        </td>
                        <!-- <td><a href="/admin/employee/edit-employee/<%= employee._id %>">Edit</a></td> -->
                        <td><a class="confirmDeletion"
                                href="/admin/employee/delete-employee/<%= employee._id %>">Delete</a></td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
        <% } else {%>
            <h3 class="text-center">There are no employee.</h3>
            <% }%>

                <%- include('../_layouts/adminfooter') %>