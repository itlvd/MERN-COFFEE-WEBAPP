<%- include('../_layouts/adminheader') %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style>
        .table tr {
            cursor: pointer;
        }
        
        .main-section {
            margin-top: 120px;
        }
        
        .hiddenRow {
            padding: 0 4px !important;
            background-color: #eeeeee;
            font-size: 13px;
        }
        
        .accordian-body span {
            color: #a2a2a2 !important;
        }
    </style>



    <% var count = 0%>
        <h2> Danh sách đơn hàng</h2>
        <div class="container ">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-striped" style="border-collapse:collapse;">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Mã hoá đơn</th>
                                <th>Tên khách hàng</th>
                                <th>Tổng số tiền</th>
                                <th>Hoàn thành</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% bill.forEach(function(bill){ %>
                                <%count += 1%>
                                    <tr colspan="6" data-toggle="collapse" data-target="#demo<%=count%>" class="accordion-toggle">
                                        <td>
                                            <%=count%>
                                        </td>
                                        <td>
                                            <%=bill._id%>
                                        </td>
                                        <td>tenkhachhang</td>
                                        <td>
                                            <%=bill.total + bill.ship%>
                                        </td>
                                        <td> <a class="btn btn-primary me-2" href="/admin/orders/<%=bill._id%>/completed" role="button">Hoàn thành</a> </td>
                                    </tr>
                                    <tr class="p">
                                        <td colspan="6" class="hiddenRow">
                                            <div class="accordian-body collapse p-3" id="demo<%=count%>">
                                                <p><b>Số điện thoại :</b> <span><%=bill.phone%></span></p>
                                                <p><b>Địa chỉ : </b><span><%=bill.address%></span> </p>
                                                <p><b>Ngày tạo đơn : </b><span><%=bill.createdAt%></span> </p>
                                                <%var cart = bill.products%>
                                                    <table class="table table-striped">
                                                        <thead>
                                                            <tr>
                                                                <th class="center">#</th>
                                                                <th>Sản phẩm</th>
                                                                <th>Danh mục</th>
                                                                <th class="center">Số lượng</th>
                                                                <th class="right">Giá tiền</th>
                                                                <th class="right">Thành tiền</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% var count_pd = 0; %>
                                                                <% cart.forEach(function(product){ %>
                                                                    <% count_pd +=1 %>
                                                                        <% var sub = parseFloat(product.quantity * product.price).toFixed(2) %>
                                                                            <tr>
                                                                                <td class="center">
                                                                                    <%=count_pd %>
                                                                                </td>
                                                                                <td class="left">
                                                                                    <%= product.title %>
                                                                                </td>
                                                                                <td class="left">
                                                                                    <%= product.category %>
                                                                                </td>
                                                                                <td class="center">
                                                                                    <%= product.quantity %>
                                                                                </td>
                                                                                <td class="right">
                                                                                    <%= product.price %> VND</td>
                                                                                <td class="right">
                                                                                    <%= sub %> VND</td>
                                                                            </tr>
                                                                            <% }); %>
                                                        </tbody>
                                                    </table>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
        <%var pre = Number(page) - 1%>
            <%var next = Number(page) + 1%>
                <%if (pre > 0 && next <= totalPage){%>
                    <a href="/admin/orders?page=<%=pre%>" class="previous round">&#8249;</a>
                    <%=page%>
                        <a href="/admin/orders?page=<%=next%>" class="next round">&#8250;</a>
                        <%} else if (pre == 0 && totalPage != 0 && totalPage != 1) {%>
                            &#8249;
                            <%=page%>
                                <a href="/admin/orders?page=<%=next%>" class="next round">&#8250;</a>
                                <%} else if (next > totalPage && totalPage != 0 && totalPage != 1) {%>
                                    <a href="/admin/orders?page=<%=pre%>" class="previous round">&#8249;</a>
                                    <%=page%>
                                        &#8250;
                                        <%}%>
                                            <script>
                                                $('.accordion-toggle').click(function() {
                                                    $('.hiddenRow').hide();
                                                    $(this).next('tr').find('.hiddenRow').show();
                                                });
                                            </script>
                                            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
                                            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>


                                            <%- include('../_layouts/adminfooter') %>