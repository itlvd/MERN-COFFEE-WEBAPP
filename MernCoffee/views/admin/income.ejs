<%- include('../_layouts/adminheader') %>


  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>


  <h2 class="page-title d-flex flex-column">
    Income
    Management Area
  </h2>
  <hr class=" hline" , style="width:100%">
  <h3 class=" d-flex flex-column">
    Total income of this year: <%=total%> VND
  </h3>
  <br><br>


  <% var incomemonthly=monthlyIncome; %>

    <head>
      <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
      </script>
      <script type="text/javascript">
        var income = [<%= incomemonthly %>];
        window.onload = function () {
          var chart = new CanvasJS.Chart("chartContainer", {
            title: {
              text: "Yearly income"
            },
            data: [
              {
                theme: "light",
                type: "line",
                dataPoints: [
                  { label: "Jan", y: income[0] },
                  { label: "Feb", y: income[1] },
                  { label: "Mar", y: income[2] },
                  { label: "Apr", y: income[3] },
                  { label: "May", y: income[4] },
                  { label: "Jun", y: income[5] },
                  { label: "Jul", y: income[6] },
                  { label: "Aug", y: income[7] },
                  { label: "Sep", y: income[8] },
                  { label: "Oct", y: income[9] },
                  { label: "Nov", y: income[10] },
                  { label: "Dec", y: income[11] }
                ],
              }
            ],
            axisY: {
              prefix: "VNƒê ",
              suffix: "K"
            }

          });
          chart.render();
        }
        console.log(income);
      </script>
    </head>

    <body>
      <div id="chartContainer" style="height: 300px; width: 80%; "></div>
    </body>


