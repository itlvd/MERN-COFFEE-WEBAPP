<%- include('../_layouts/adminheader') %>

    <h1>
        <%= title %>
    </h1>
    <hr class="hline">
    <a href="/admin/customer" class="btn2 btn-primary btn-lg">Back to all customer</a>
    <% if (error) { %>
        <br>
        <div style="color: red;"><%= error %></div>
    <% } %> 
    <form method="post" action="/admin/customer/add-customer" style="margin-top: 20px;">

        <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" class="form-control" placeholder="Name" required>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="email" name="email" class="form-control" placeholder="Email" required>
        </div>

        <div class="form-group">
            <label>Username</label>
            <input type="text" name="username" class="form-control" placeholder="Username" required>
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="password" name="password" class="form-control" placeholder="Password" required>
        </div>


        <div class="form-group">
            <label hidden>Role</label>
            <input type="text" name="role" class="form-control" placeholder="user" value="user" hidden>
        </div>

        <button type="submit" class="btn2 btn-default">Add Customer</button>
    </form>

    <%- include('../_layouts/adminfooter') %>