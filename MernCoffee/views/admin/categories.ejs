<%- include('../_layouts/adminheader_test') %>


    <h2 class="page-title d-flex flex-column align-items-center" style="margin-top: 20px; margin-left: 50px;">
        Category
        Management Area
    </h2>
    <hr class="hline" style="margin-left: 410px; width: 100%; margin-bottom: 20px;">


    <!-- <div class="d-flex flex-column align-items-center"> <button class="btn" href="/admin/income"><i
                    class="fa fa-dashboard"></i><span>Tổng quan</span></button> <button class="btn mt-3"><i
                    class="fa fa-users"></i><span>Thông tin cá nhân</span></button> </div> -->
    <div class="center">
        <% if (count> 0) { %>
            <table class="table table-striped alignmiddle" style="margin-left: 450;">
                <thead>
                    <tr class="home">
                        <th>Serial</th>
                        <th>Title</th>
                        <th>Category ID</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(function(category){ %>
                        <tr>
                            <td>
                                <%= category_count++ %>
                            </td>
                            <td>
                                <%= category.title %>
                            </td>
                            <td>
                                <%= category._id %>
                            </td>
                            <td><a href="/admin/categories/edit-category/<%= category._id %>">Edit</a></td>
                            <td><a class="confirmDeletion"
                                    href="/admin/categories/delete-category/<%= category._id %>">Delete</a></td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>

            <% } else {%>
                <h3 class="text-center">There are no products.</h3>
                <% }%>


                    <a href="/admin/categories//add-category" class="btn3 btn-primary btn-lg ">
                        Add a new category
                    </a>


