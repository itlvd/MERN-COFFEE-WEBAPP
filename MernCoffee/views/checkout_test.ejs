<%- include("_layouts/header.ejs") %>

    <head>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.0.3/css/font-awesome.css" />
        <style>
            /* Tuan */
            .title {
                margin-top: 60px;
                height: 60px;
                display: flex;
                justify-content: center;
                align-items: center;
            }

            .show {
                display: block !important;
            }


            body {
                color: #000;
                overflow-x: hidden;
                height: 100%;
                background-color: #fff;
                background-repeat: no-repeat
            }

            .plus-minus {
                position: relative
            }

            .plus {
                position: absolute;
                top: -4px;
                left: 2px;
                cursor: pointer
            }

            .minus {
                position: absolute;
                top: 8px;
                left: 5px;
                cursor: pointer
            }

            .vsm-text:hover {
                color: #FF5252
            }

            .book,
            .book-img {
                width: 120px;
                height: 180px;
                border-radius: 10px
            }

            .book {
                margin: 20px 15px 5px 15px
            }

            .border-top {
                border-top: 1px solid #EEEEEE !important;
                margin-top: 20px;
                padding-top: 15px
            }

            .card {
                margin: 40px 0px;
                padding: 40px 50px;
                border-radius: 20px;
                border: none;
                box-shadow: 1px 5px 10px 1px rgba(0, 0, 0, 0.2)
            }

            input,
            textarea {
                background-color: #F3E5F5;
                padding: 8px 15px 8px 15px;
                width: 100%;
                border-radius: 5px !important;
                box-sizing: border-box;
                border: 1px solid #F3E5F5;
                font-size: 15px !important;
                color: #000 !important;
                font-weight: 300
            }

            input:focus,
            textarea:focus {
                -moz-box-shadow: none !important;
                -webkit-box-shadow: none !important;
                box-shadow: none !important;
                border: 1px solid #9FA8DA;
                outline-width: 0;
                font-weight: 400
            }

            button:focus {
                -moz-box-shadow: none !important;
                -webkit-box-shadow: none !important;
                box-shadow: none !important;
                outline-width: 0
            }

            .pay {
                width: 80px;
                height: 40px;
                border-radius: 5px;
                border: 1px solid #673AB7;
                margin: 10px 20px 10px 0px;
                cursor: pointer;
                box-shadow: 1px 5px 10px 1px rgba(0, 0, 0, 0.2)
            }

            .gray {
                -webkit-filter: grayscale(100%);
                -moz-filter: grayscale(100%);
                -o-filter: grayscale(100%);
                -ms-filter: grayscale(100%);
                filter: grayscale(100%);
                color: #E0E0E0
            }

            .gray .pay {
                box-shadow: none
            }

            #tax {
                border-top: 1px lightgray solid;
                margin-top: 10px;
                padding-top: 10px
            }

            .btn-blue {
                border: none;
                border-radius: 10px;
                background-color: #673AB7;
                color: #fff;
                padding: 8px 15px;
                margin: 20px 0px;
                cursor: pointer
            }

            .btn-blue:hover {
                background-color: #311B92;
                color: #fff
            }

            #checkout {
                float: left
            }

            #check-amt {
                float: right
            }

            @media screen and (max-width: 768px) {

                .book,
                .book-img {
                    width: 100px;
                    height: 150px
                }

                .card {
                    padding-left: 15px;
                    padding-right: 15px
                }

                .mob-text {
                    font-size: 13px
                }

                .pad-left {
                    padding-left: 20px
                }
            }
        </style>
    </head>

    <body>
        <div class="title">
            <h1>Welcome back</h1>
        </div>

        <div class="container px-4 py-5 mx-auto">
            <div class="row d-flex justify-content-space-between">
                <div class="col-lg-4">
                    <h4 class="heading">Shopping Bag</h4>
                </div>
                <div class="col-lg-8">
                    <div class="row text-right">
                        <div class="col-md-3">
                            <h6 class="mob-text">Format</h6>
                        </div>
                        <div class="col-md-3">
                            <h6 class="mob-text">Quantity</h6>
                        </div>
                        <div class="col-md-3">
                            <h6 class="mob-text">Price</h6>
                        </div>
                        <div class="col-md-3">
                            <h6 class="mob-text">SubTotal</h6>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row d-flex justify-content-center border-top">
                <% var total=0; %>
                    <% cart.forEach(function(product){ %>
                        <% var sub=parseFloat(product.quantity * product.price).toFixed(2) %>
                            <% total +=+sub %>
                                <div class="col-lg-4">
                                    <div class="row d-flex">
                                        <div class="book"> <img
                                                src="/product_images/<%= product._id %>/<%= product.image %>"
                                                class="book-img"> </div>
                                        <!-- <div class="my-auto flex-column d-flex pad-left">
                                            <h6 class="mob-text">
                                                <%= product.title%>
                                            </h6>
                                        </div> -->
                                    </div>
                                </div>
                                <div class="my-auto col-lg-8">
                                    <div class="row text-right">
                                        <div class="col-md-3">
                                            <h6 class="mob-text">
                                                <%= product.title%>
                                            </h6>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="row d-flex justify-content-end px-3">
                                                <p class="mb-0" id="cnt1">
                                                    <%= product.quantity%>
                                                </p>
                                                <div class="d-flex flex-column plus-minus">
                                                    <a class="vsm-text plus"
                                                        href="/cart/update/<%= product.slug %>?action=add">+</a>&nbsp;
                                                    <a class="vsm-text minus"
                                                        href="/cart/update/<%= product.slug %>?action=remove">-</a>&nbsp;
                                                    <a class="vsm-text clear"
                                                        href="/cart/update/<%= product.slug %>?action=clear">Clear</a>&nbsp;
                                                    <!-- <a href="/cart/update/<%= product.slug %>?action=add">+</a>&nbsp;
                                                    <a href="/cart/update/<%= product.slug %>?action=remove">-</a>&nbsp;
                                                    <a
                                                        href="/cart/update/<%= product.slug %>?action=clear">Clear</a>&nbsp; -->
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <h6 class="mob-text">
                                                <%= product.price%>
                                            </h6>
                                        </div>
                                        <div class="col-md-3">
                                            <h6 class="mob-text">
                                                <%=sub%>
                                            </h6>
                                        </div>

                                    </div>
                                </div>

            </div>

            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="row px-2">
                                    <div class="form-group col-md-6"> <label class="form-control-label">Full
                                            Name</label>
                                        <input type="text" id="cname" name="cname" placeholder="Nguyen Van A">
                                    </div>
                                    <div class="form-group col-md-6"> <label class="form-control-label">Phone
                                            Number</label>
                                        <input type="text" id="cphone" name="cphone" placeholder="0123 456 789">
                                    </div>
                                </div>
                                <div class="row px-2">
                                    <div class="form-group col-md-6"> <label class="form-control-label">Address</label>
                                        <input type="text" id="addr" name="addr"
                                            placeholder="227 Nguyen Van Cu, P4, Q5, TPHCM">
                                    </div>
                                    <div class="form-group col-md-6"> <label class="form-control-label">Promotion
                                            (option)</label>
                                        <input type="text" id="pro" name="pro" placeholder="******">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4 mt-2">
                                <div class="row d-flex justify-content-between px-4">
                                    <p class="mb-1 text-left">Subtotal</p>
                                    <h6 class="mb-1 text-right">
                                        <%=sub%>
                                    </h6>
                                </div>
                                <div class="row d-flex justify-content-between px-4">
                                    <p class="mb-1 text-left">Promotion</p>
                                    <h6 class="mb-1 text-right">
                                        <%=promo%>
                                    </h6>
                                </div>
                                <div class="row d-flex justify-content-between px-4" id="tax">
                                    <p class="mb-1 text-left">Total (tax included)</p>
                                    <h6 class="mb-1 text-right">
                                        <%=total - promo%>
                                    </h6>
                                </div> <button class="btn-block btn-blue"> <span> <span id="checkout">Checkout</span>
                                        <span id="check-amt">
                                            <%=total - promo%>
                                        </span> </span> </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>

            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    </body>