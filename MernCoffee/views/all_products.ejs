<%- include('./_layouts/header') %>
<link rel="stylesheet" href="/css/all_products.css">
<div class="title">
    <h1>All products</h1>
</div>

<div class="products-list">
    
    <% products.forEach(function(p){ %>
            <div class="product">
                <div class="product-card">
                    <div class="img-container">
                        <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>"></a>
                            <img class="pimage" src="/product_images/<%= p._id %>/<%= p.image %>" alt="">
                        </a>
                    </div>
                    <div class="description">
                        <div class="product-name">
                            <h3><%= p.title %></h3>
                        </div>
                        <div class="product-content">
                            <h4>$<%= parseFloat(p.price).toFixed(2) %></h4>
                            <a class="vd" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>
                        </div>
                    </div>
                </div>
            </div>

        <% }); %>
    
</div>

<%- include('./_layouts/footer') %>